<script>
    // Llama al endpoint para verificar existencia de email
    async function apiEmailExists(email) {
      const url = '/account/email-exists?email=' + encodeURIComponent(email);
      const res = await fetch(url, { method: 'GET', cache: 'no-store' });
      if (!res.ok) return { exists: false };
      try { return await res.json(); } catch { return { exists: false }; }
    }

    // Manejador del click en "¿Olvidaste tu contraseña?"
    document.getElementById('goToForgot')?.addEventListener('click', async function (e) {
      e.preventDefault();
      const emailInput = document.getElementById('loginEmail');
      const email = (emailInput?.value || '').trim();

      const alertBox = document.getElementById('loginAlert');
      alertBox?.classList.add('d-none');
      alertBox.textContent = '';

      if (!email) {
        alertBox.textContent = 'Ingresa tu correo para continuar.';
        alertBox.classList.remove('d-none');
        emailInput?.focus();
        return;
      }

      const data = await apiEmailExists(email);
      if (!data.exists) {
        alertBox.textContent = 'No existe una cuenta con ese correo.';
        alertBox.classList.remove('d-none');
        emailInput?.focus();
        return; // NO cambiamos de pestaña
      }

      // Si existe: pre-llena el email en la pestaña de "Recuperar contraseña"
      const forgotEmail = document.getElementById('Email'); // input del form de reset directo
      if (forgotEmail) { forgotEmail.value = email; }

      // Cambia a la pestaña de "Recuperar contraseña"
      if (typeof showForgot === 'function') {
        showForgot();
      } else {
        // Fallback: usa Bootstrap Tab si está disponible
        const trigger = document.querySelector('[data-bs-target="#forgot-password"], a[href="#forgot-password"]');
        if (trigger && window.bootstrap) {
          new bootstrap.Tab(trigger).show();
        } else {
          // Último recurso: togglear clases
          document.querySelector('#forgot-password')?.classList.add('show', 'active');
          document.querySelector('#login')?.classList.remove('show', 'active');
        }
      }
    });
</script>

