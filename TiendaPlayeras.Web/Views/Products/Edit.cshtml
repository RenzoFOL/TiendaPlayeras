@model TiendaPlayeras.Web.Models.Product
@{
    ViewData["Title"] = "Editar producto";
}

<div class="d-flex align-items-center justify-content-between mb-3">
  <h2 class="m-0">Editar: @Model.Name</h2>
  <a class="btn btn-outline-secondary" href="@Url.Action("Index")">← Regresar</a>
</div>

<div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

<div class="card shadow-sm">
  <div class="card-body">
    <form method="post" asp-action="Edit" asp-route-id="@Model.Id" class="row g-3">
      @Html.AntiForgeryToken()

      <div class="col-12 col-lg-6">
        <div class="form-floating">
          <input asp-for="Name" class="form-control" placeholder="Nombre" maxlength="100" required />
          <label asp-for="Name">Nombre <span class="req">*</span></label>
        </div>
        <span class="text-danger small" asp-validation-for="Name"></span>
      </div>

      <div class="col-12 col-lg-3">
        <div class="form-floating">
          <input asp-for="BasePrice" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required />
          <label asp-for="BasePrice">Precio base <span class="req">*</span></label>
        </div>
        <span class="text-danger small" asp-validation-for="BasePrice"></span>
      </div>

      <!-- SWITCHES: Personalizable / Habilitado -->
      <div class="col-12 col-lg-3">
        <div class="switch-group">
          <div class="form-check form-switch m-0">
            <input class="form-check-input" asp-for="IsCustomizable" id="IsCustomizable" role="switch" />
            <label class="form-check-label" for="IsCustomizable">Personalizable</label>
            <div class="form-text">Permite subir diseño propio</div>
          </div>

          <div class="form-check form-switch m-0">
            <input class="form-check-input" asp-for="IsActive" id="IsActive" role="switch" />
            <label class="form-check-label" for="IsActive">Habilitado</label>
            <div class="form-text">Visible en el catálogo</div>
          </div>
        </div>
      </div>

      <div class="col-12">
        <label class="form-label">Descripción</label>
        <textarea asp-for="Description" class="form-control" rows="4" maxlength="2000"></textarea>
        <span class="text-danger small" asp-validation-for="Description"></span>
      </div>

      <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">
          <i class="bi bi-save"></i> Guardar
        </button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Cancelar</a>
      </div>
    </form>
  </div>
</div>

@section Scripts{
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script>
    (function(){
      var hasErrors = document.querySelectorAll(".field-validation-error").length > 0;
      if(hasErrors){
        var summary = document.querySelector('[asp-validation-summary="ModelOnly"]');
        if(summary){ summary.classList.remove('d-none'); }
      }
    })();
  </script>
}