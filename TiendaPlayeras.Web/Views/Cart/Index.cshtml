@model IEnumerable<TiendaPlayeras.Web.Models.CartItem>
@{
ViewData["Title"] = "Carrito";
}
<table class="table">
<thead><tr><th>Producto</th><th>Cant</th><th>Precio</th><th></th></tr></thead>
<tbody>
@foreach (var i in Model) {
<tr>
<td>@i.ProductVariant!.Product!.Name (@i.ProductVariant.Fit/@i.ProductVariant.Color/@i.ProductVariant.Size)</td>
<td>@i.Quantity</td>
<td>$@(i.UnitPrice * i.Quantity)</td>
<td>
<form asp-action="Remove" method="post" class="d-inline">
<input type="hidden" name="id" value="@i.Id" />
@Html.AntiForgeryToken()
<button class="btn btn-sm btn-outline-danger">Quitar</button>
</form>
</td>
</tr>
}
</tbody>
</table>
<div class="text-end">
<strong>Subtotal:</strong> $@ViewBag.Subtotal
</div>