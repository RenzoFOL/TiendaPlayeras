@model TiendaPlayeras.Web.Models.CartSummary
@{
    ViewData["Title"] = "Tu carrito";
}

<div class="container my-4">
    <h2 class="mb-3">Carrito</h2>

    @if (Model is null || !Model.Lines.Any())
    {
        <div class="alert alert-info">Tu carrito está vacío.</div>
        <a class="btn btn-primary" href="@Url.Action("Index","Catalog")">Ir al catálogo</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                <tr>
                    <th>Producto</th>
                    <th>Talla</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-end">Precio</th>
                    <th class="text-end">Subtotal</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var line in Model.Lines)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <img src="@line.ImageUrl" 
                                     onerror="this.src='/images/placeholder.png'"
                                     style="width:60px;height:60px;object-fit:cover;border-radius:.5rem;" />
                                <div class="fw-semibold">@line.ProductName</div>
                            </div>
                        </td>
                        <td>@line.Size</td>
                        <td class="text-center">
                            <form asp-action="UpdateQty" method="post" class="d-inline-flex align-items-center gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="cartItemId" value="@line.CartItemId" />
                                <input type="number" name="qty" min="1" value="@line.Quantity" 
                                       class="form-control form-control-sm" style="width:80px;" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Actualizar</button>
                            </form>
                        </td>
                        <td class="text-end">$@line.UnitPrice.ToString("0.00")</td>
                        <td class="text-end fw-semibold">$@line.Subtotal.ToString("0.00")</td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-danger js-remove-from-cart"
                                    data-cart-item-id="@line.CartItemId">
                                Quitar
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <!-- Total y botón comprar (SIMPLIFICADO) -->
        <div class="border-top pt-3 mt-3">
            <div class="row">
                <div class="col-md-6">
                    <button type="button" class="btn btn-outline-secondary js-clear-cart">
                        <i class="fas fa-trash me-2"></i>Vaciar carrito
                    </button>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="fw-semibold">Total:</span>
                                <span class="fw-bold fs-4 text-success">$@Model.TotalAmount.ToString("0.00")</span>
                            </div>
                            <a href="/Checkout" class="btn btn-success w-100 btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Comprar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
(function() {
    const metaToken = document.querySelector('meta[name="RequestVerificationToken"]');
    const XSRF = metaToken?.content || '';

    // Eliminar item individual
    document.querySelectorAll('.js-remove-from-cart').forEach(btn => {
        btn.addEventListener('click', async function() {
            const id = this.getAttribute('data-cart-item-id');
            if (!id || !confirm('¿Eliminar este producto?')) return;

            try {
                const r = await fetch('/Cart/Remove', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': XSRF
                    },
                    body: JSON.stringify({ cartItemId: parseInt(id, 10) })
                });

                const data = await r.json();
                if (data.ok) {
                    window.location.reload();
                } else {
                    alert(data.message || 'Error al eliminar');
                }
            } catch (err) {
                alert('Error de conexión');
                console.error(err);
            }
        });
    });

    // Vaciar carrito
    const clearBtn = document.querySelector('.js-clear-cart');
    if (clearBtn) {
        clearBtn.addEventListener('click', async function() {
            if (!confirm('¿Vaciar todo el carrito?')) return;

            try {
                const r = await fetch('/Cart/Clear', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: { 'RequestVerificationToken': XSRF }
                });

                if (r.ok) window.location.reload();
                else alert('Error al vaciar carrito');
            } catch (err) {
                alert('Error de conexión');
                console.error(err);
            }
        });
    }
})();
</script>
}