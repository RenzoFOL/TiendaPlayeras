@model TiendaPlayeras.Web.Controllers.ResetEmployeePasswordVm
@{
    ViewData["Title"] = "Restablecer contraseña";
}
<h2>Restablecer contraseña</h2>
<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        <label class="form-label">Nueva contraseña</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-primary"><i class="fas fa-key me-1"></i> Cambiar</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver</a>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }