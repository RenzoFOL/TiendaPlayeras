@model TiendaPlayeras.Web.Controllers.CreateEmployeeVm
@{
    ViewData["Title"] = "Nuevo empleado";
}
<h2>Nuevo empleado</h2>
<form method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Teléfono (opcional)</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña (opcional)</label>
        <input asp-for="Password" class="form-control" type="password" />
        <div class="form-text">Si lo dejas vacío se asignará una contraseña temporal.</div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary"><i class="fas fa-save me-1"></i> Crear</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }