@using Microsoft.AspNetCore.Identity
@using TiendaPlayeras.Web.Models
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - Panel Empleado</title>

  <!-- Bootstrap 5 + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body{ background:#f6f7f9; }
    .navbar-brand i{ vertical-align: -2px; }
    .card{ border:0; border-radius: .75rem; }
    .table> :not(caption)>*>*{ vertical-align: middle; }
    .form-floating>label>span.req{ color:#dc3545; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="@Url.Action("Index","Products", new { area="Employee" })">
        <i class="bi bi-person-workspace me-2"></i>Empleado
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#empNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="empNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Products", new { area="Employee" })">
              <i class="bi bi-bag me-1"></i>Productos
            </a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item me-2">
            <a class="btn btn-outline-light btn-sm" href="@Url.Content("~/")">
              <i class="bi bi-house"></i> Tienda
            </a>
          </li>
          <li class="nav-item">
            <form method="post" action="@Url.Content("~/Account/Logout")" class="d-inline">
              @Html.AntiForgeryToken()
              <button class="btn btn-warning btn-sm" type="submit">
                <i class="bi bi-box-arrow-right"></i> Salir
              </button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    @RenderBody()
  </main>

  <!-- JS: Bootstrap + jQuery + validaciÃ³n unobtrusive -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>