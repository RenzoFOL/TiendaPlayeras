@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Gestor de Variantes";
}

<style>
.variants-manager {
    padding: 40px 20px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
}

.manager-header {
    max-width: 1400px;
    margin: 0 auto 40px;
    text-align: center;
}

.manager-header h1 {
    font-size: 42px;
    font-weight: 700;
    background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 10px;
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 25px;
    max-width: 1400px;
    margin: 0 auto;
}

.product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    position: relative;
}

.product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
}

.product-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    background: #f8f9fa;
}

.product-info {
    padding: 20px;
}

.product-name {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 12px;
    color: #2c3e50;
}

.variants-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 8px;
    margin-bottom: 15px;
}

.variant-count {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #64748b;
}

.variant-badge {
    background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    color: white;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
}

.action-buttons {
    display: flex;
    gap: 10px;
}

.btn-manage {
    flex: 1;
    padding: 12px;
    background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    text-align: center;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-manage:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(48, 207, 208, 0.3);
    color: white;
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
    background: white;
    border-radius: 16px;
    max-width: 600px;
    margin: 0 auto;
}

.empty-icon {
    font-size: 64px;
    color: #e0e0e0;
    margin-bottom: 20px;
}
</style>

<div class="variants-manager">
    <div class="manager-header">
        <h1>
            <i class="fas fa-layer-group"></i> Gestor de Variantes
        </h1>
        <p class="text-muted">Selecciona un producto para configurar sus variantes</p>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Volver al menÃº
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="products-grid">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <img src="@(string.IsNullOrEmpty(product.MainImagePath) ? "/img/placeholder.png" : product.MainImagePath)" 
                         alt="@product.Name" 
                         class="product-image" />
                    
                    <div class="product-info">
                        <h3 class="product-name">@product.Name</h3>
                        
                        <div class="variants-info">
                            <div class="variant-count">
                                <i class="fas fa-layer-group"></i>
                                <span>@product.TotalVariants variantes</span>
                            </div>
                            <span class="variant-badge">
                                @product.VariantsCount activas
                            </span>
                        </div>

                        <div class="action-buttons">
                            <a href="@Url.Action("Variants", "Products", new { productId = product.Id })" 
                               class="btn-manage">
                                <i class="fas fa-cog"></i> Gestionar Variantes
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h3>No hay productos disponibles</h3>
            <p class="text-muted">Crea tu primer producto para poder gestionar sus variantes</p>
            <a href="@Url.Action("Create", "Products")" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Crear Producto
            </a>
        </div>
    }
</div>

