                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-calculator"></i> Subtotal
                            </div>
                            <div class="info-value">@Model.Subtotal.ToString("C")</div>
                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-truck"></i> EnvÃ­o
                            </div>
                            <div class="info-value">@Model.Shipping.ToString("C")</div>
                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-dollar-sign"></i> Total
                            </div>
                            <div class="info-value">
                                <strong style="color: #10b981; font-size: 20px;">@Model.Total.ToString("C")</strong>
                            </div>
                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-map-marker-alt"></i> Punto de Entrega
                            </div>
                            <div class="info-value">@Model.DeliveryPoint</div>
                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-clock"></i> Horario
                            </div>
                            <div class="info-value">@Model.DeliverySchedule</div>
                        </div>

                        <div class="info-row">
                            <div class="info-label">
                                <i class="fas fa-credit-card"></i> MÃ©todo de Pago
