                                <span>Confirmar</span>
                            </button>
                            <button class="quick-action-btn" onclick="updateStatus('InProgress')">
                                <i class="fas fa-cog"></i>
                                <span>En Proceso</span>
                            </button>
                            <button class="quick-action-btn" onclick="updateStatus('ReadyForPickup')">
                                <i class="fas fa-box-open"></i>
                                <span>Listo</span>
                            </button>
                            <button class="quick-action-btn" onclick="updateStatus('Completed')">
                                <i class="fas fa-check-circle"></i>
                                <span>Completar</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- InformaciÃ³n Adicional -->
                <div class="info-card">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-database"></i> InformaciÃ³n Adicional
                        </h5>
                    </div>
                    <div class="card-body-custom">
                        <div class="additional-info">
                            <p>
                                <i class="fas fa-fingerprint"></i>
                                <strong>ID del Pedido:</strong> 
                                <span>@Model.Id</span>
                            </p>
                            <p>
                                <i class="fas fa-user-tag"></i>
                                <strong>Usuario ID:</strong> 
                                <span>@Model.UserId</span>
                            </p>
                            <p>
                                <i class="fas fa-sync-alt"></i>
                                <strong>Actualizado:</strong> 
                                <span>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                            </p>
                            <p>
                                <i class="fas fa-tag"></i>
                                <strong>Estado Actual:</strong> 
                                <span class="badge-custom @GetStatusBadgeClass(Model.Status)" style="margin-left: 10px;">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Historial de Estados (si estÃ¡ disponible) -->
