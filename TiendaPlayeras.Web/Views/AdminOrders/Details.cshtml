                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Intentar cargar historial si el endpoint existe
        loadStatusHistory(@Model.Id);
        
        console.log('âœ… Detalles del pedido cargados');
        console.log('ðŸ“¦ Pedido:', '@Model.OrderNumber');
    });

    function updateStatus(status) {
        if (confirm('Â¿EstÃ¡s seguro de que quieres cambiar el estado a "' + status + '"?')) {
            document.getElementById('newStatus').value = status;
            document.querySelector('form').submit();
        }
    }

    function loadStatusHistory(orderId) {
        $.get('@Url.Action("GetStatusHistory", "AdminOrders")/' + orderId, function(data) {
            var html = '';
            if (data.length === 0) {
                html = '<p class="text-muted text-center"><i class="fas fa-inbox"></i> No hay historial disponible</p>';
            } else {
                html = '<div class="status-timeline">';
                data.forEach(function(entry, index) {
                    html += `
                        <div class="timeline-item ${index === 0 ? 'current' : ''}">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h6>${entry.status}</h6>
                                <p class="text-muted small mb-1">
                                    <i class="fas fa-user"></i> Por: ${entry.changedBy}
                                </p>
                                <p class="text-muted small mb-1">
                                    <i class="fas fa-clock"></i> ${new Date(entry.changedAt).toLocaleString()}
                                </p>
                                ${entry.notes ? `<p class="mb-0"><i class="fas fa-comment"></i> ${entry.notes}</p>` : ''}
                            </div>
                        </div>
                    `;
                });
                html += '</div>';
            }
            $('#statusHistory').html(html);
        }).fail(function() {
            $('#statusHistory').html('<p class="text-muted text-center"><i class="fas fa-exclamation-triangle"></i> Historial no disponible</p>');
        });
    }

    // AnimaciÃ³n al cambiar el selector de estado
    $('#newStatus').on('change', function() {
        $(this).addClass('border-success');
        setTimeout(() => {
            $(this).removeClass('border-success');
        }, 500);
    });
</script>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-info",
            "InProgress" => "bg-primary",
            "ReadyForPickup" => "bg-success",
            "Completed" => "bg-secondary",
            "Cancelled" => "bg-danger",
            _ => "bg-light text-dark"
        };
    }
}