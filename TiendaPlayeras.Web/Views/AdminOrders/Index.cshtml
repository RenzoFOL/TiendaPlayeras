@model List<Order>
@{
    ViewData["Title"] = "Gesti처n de Pedidos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gesti처n de Pedidos</h2>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="status" class="form-label">Estado</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">Todos los estados</option>
                        @foreach (var status in OrderStatus.GetAllStatuses())
                        {
                            <option value="@status" selected="@(ViewBag.StatusFilter == status)">
                                @OrderStatus.GetDisplayName(status)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="search" class="form-label">Buscar</label>
                    <input type="text" name="search" id="search" class="form-control" 
                           value="@ViewBag.SearchFilter" placeholder="N째 orden, cliente o producto...">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de pedidos -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>N째 Orden</th>
                            <th>Cliente</th>
                            <th>Productos</th>
                            <th>Total</th>
                            <th>Punto Entrega</th>
                            <th>Estado</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderNumber</td>
                                <td>@order.UserName</td>
                                <td>
                                    <small>
                                        @order.TotalItems producto(s)<br>
                                        @string.Join(", ", order.Items.Take(2).Select(i => i.ProductName))
                                        @if (order.Items.Count > 2) { <text>...</text> }
                                    </small>
                                </td>
                                <td>@order.Total.ToString("C")</td>
                                <td>@order.DeliveryPoint</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                        @order.StatusDisplay
                                    </span>
                                </td>
                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = order.Id })" 
                                       class="btn btn-sm btn-outline-primary">Ver</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-info",
            "InProgress" => "bg-primary",
            "ReadyForPickup" => "bg-success",
            "Completed" => "bg-secondary",
            "Cancelled" => "bg-danger",
            _ => "bg-light text-dark"
        };
    }
}