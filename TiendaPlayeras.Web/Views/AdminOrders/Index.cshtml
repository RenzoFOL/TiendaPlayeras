@model List<Order>
@{
    ViewData["Title"] = "Gesti√≥n de Pedidos";
}

<style>
:root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --warning-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    --info-gradient: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    --dark-gradient: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

.orders-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 40px 20px;
}

.page-header {
    text-align: center;
    margin-bottom: 40px;
    animation: fadeInDown 0.8s ease;
}

.page-header h1 {
    font-size: 48px;
    font-weight: 700;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.page-header p {
    font-size: 18px;
    color: #64748b;
    font-weight: 500;
}

.stats-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto 40px;
    padding: 0 20px;
}

.stat-box {
    background: white;
    padding: 25px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    animation: fadeInUp 0.8s ease;
    animation-fill-mode: both;
    position: relative;
    overflow: hidden;
}

.stat-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--stat-gradient);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.stat-box:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
}

.stat-box:hover::before {
    opacity: 1;
}

.stat-box:nth-child(1) { animation-delay: 0.1s; --stat-gradient: var(--warning-gradient); }
.stat-box:nth-child(2) { animation-delay: 0.2s; --stat-gradient: var(--info-gradient); }
.stat-box:nth-child(3) { animation-delay: 0.3s; --stat-gradient: var(--success-gradient); }
.stat-box:nth-child(4) { animation-delay: 0.4s; --stat-gradient: var(--dark-gradient); }

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    color: white;
    background: var(--stat-gradient);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    transition: all 0.4s ease;
    position: relative;
    z-index: 1;
}

.stat-box:hover .stat-icon {
    transform: scale(1.1) rotate(5deg);
    background: white;
}

.stat-info {
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
}

.stat-box:hover .stat-info {
    color: white;
}

.stat-info h3 {
    margin: 0;
    font-size: 32px;
    font-weight: 700;
    color: #2c3e50;
    transition: color 0.3s ease;
}

.stat-box:hover .stat-info h3 {
    color: white;
}

.stat-info p {
    margin: 0;
    font-size: 14px;
    color: #64748b;
    font-weight: 500;
    transition: color 0.3s ease;
}

.stat-box:hover .stat-info p {
    color: rgba(255, 255, 255, 0.9);
}

.filter-card {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    max-width: 1400px;
    margin: 0 auto 40px;
    animation: fadeInUp 0.8s ease 0.5s;
    animation-fill-mode: both;
}

.filter-card h5 {
    font-size: 20px;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.filter-card h5 i {
    color: #667eea;
}

.form-control, .form-select {
    border-radius: 12px;
    border: 2px solid #e0e0e0;
    padding: 12px 18px;
    font-size: 15px;
    transition: all 0.3s ease;
}

.form-control:focus, .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.3rem rgba(102, 126, 234, 0.15);
    transform: translateY(-2px);
}

.form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn {
    border-radius: 12px;
    padding: 12px 30px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-primary {
    background: var(--primary-gradient);
    color: white;
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(102, 126, 234, 0.5);
}

.btn-outline-secondary {
    background: transparent;
    border: 2px solid #e0e0e0;
    color: #64748b;
}

.btn-outline-secondary:hover {
    background: #f8f9fa;
    border-color: #667eea;
    color: #667eea;
    transform: translateY(-3px);
}

.table-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    max-width: 1400px;
    margin: 0 auto;
    animation: fadeInUp 0.8s ease 0.6s;
    animation-fill-mode: both;
}

.table {
    margin-bottom: 0;
}

.table thead {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.table thead th {
    color: white;
    border: none;
    padding: 20px 15px;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 1px;
}

.table tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid #f0f0f0;
}

.table tbody tr:hover {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    transform: scale(1.01);
}

.table tbody td {
    vertical-align: middle;
    padding: 20px 15px;
    font-size: 14px;
}

.order-number {
    font-weight: 700;
    font-size: 16px;
    color: #667eea;
}

.client-name {
    font-weight: 600;
    color: #2c3e50;
}

.product-preview {
    font-size: 13px;
    color: #64748b;
    line-height: 1.6;
}

.product-count {
    font-weight: 700;
    color: #667eea;
}

.total-amount {
    font-weight: 700;
    font-size: 16px;
    color: #10b981;
}

.delivery-point {
    display: flex;
    align-items: center;
    gap: 5px;
    color: #64748b;
}

.delivery-point i {
    color: #667eea;
}

.badge {
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: inline-block;
}

.badge.bg-warning {
    background: linear-gradient(135deg, #fa709a 0%, #fee140 100%) !important;
    color: white;
}

.badge.bg-info {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%) !important;
    color: white;
}

.badge.bg-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: white;
}

.badge.bg-success {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%) !important;
    color: white;
}

.badge.bg-secondary {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%) !important;
    color: white;
}

.badge.bg-danger {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) !important;
    color: white;
}

.order-date {
    font-size: 13px;
    color: #64748b;
}

.btn-action {
    background: var(--primary-gradient);
    color: white;
    border: none;
    padding: 8px 20px;
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-action:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.5);
    color: white;
}

.empty-state {
    text-align: center;
    padding: 80px 20px;
    color: #94a3b8;
}

.empty-state i {
    font-size: 80px;
    margin-bottom: 20px;
    opacity: 0.5;
}

.empty-state h4 {
    font-size: 24px;
    font-weight: 700;
    color: #64748b;
    margin-bottom: 10px;
}

.empty-state p {
    font-size: 16px;
    color: #94a3b8;
}


/* Responsive */
@@media (max-width: 768px) {
    .page-header h1 {
        font-size: 32px;
    }
    
    .stats-summary {
        grid-template-columns: 1fr;
    }
    
    .table-responsive {
        font-size: 12px;
    }
}
</style>

<div class="orders-container">
    <!-- Header -->
    <div class="page-header">
        <h1>
            <i class="fas fa-clipboard-list"></i> Gesti√≥n de Pedidos
        </h1>
        <p>Administra y procesa todos los pedidos de tu negocio</p>
    </div>

    <!-- Estad√≠sticas -->
    <div class="stats-summary">
        <div class="stat-box">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count(o => o.Status == "Pending")</h3>
                <p>Pendientes</p>
            </div>
        </div>
        
        <div class="stat-box">
            <div class="stat-icon">
                <i class="fas fa-sync-alt"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count(o => o.Status == "InProgress")</h3>
                <p>En Proceso</p>
            </div>
        </div>
        
        <div class="stat-box">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count(o => o.Status == "ReadyForPickup")</h3>
                <p>Listos</p>
            </div>
        </div>
        
        <div class="stat-box">
            <div class="stat-icon">
                <i class="fas fa-clipboard-check"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count(o => o.Status == "Completed")</h3>
                <p>Completados</p>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filter-card">
        <h5>
            <i class="fas fa-filter"></i> Filtros de B√∫squeda
        </h5>
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="status" class="form-label">
                    <i class="fas fa-tasks"></i> Estado del Pedido
                </label>
                <select name="status" id="status" class="form-select">
                    <option value="">Todos los estados</option>
                    @foreach (var status in OrderStatus.GetAllStatuses())
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter == status)">
                            @OrderStatus.GetDisplayName(status)
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label for="search" class="form-label">
                    <i class="fas fa-search"></i> Buscar Pedido
                </label>
                <input type="text" name="search" id="search" class="form-control" 
                       value="@ViewBag.SearchFilter" 
                       placeholder="üîç N¬∞ orden, cliente o producto...">
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="fas fa-search"></i> Buscar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Limpiar
                </a>
            </div>
        </form>
    </div>

    <!-- Tabla de pedidos -->
    <div class="table-card">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag"></i> N¬∞ Orden</th>
                            <th><i class="fas fa-user"></i> Cliente</th>
                            <th><i class="fas fa-box"></i> Productos</th>
                            <th><i class="fas fa-dollar-sign"></i> Total</th>
                            <th><i class="fas fa-map-marker-alt"></i> Entrega</th>
                            <th><i class="fas fa-info-circle"></i> Estado</th>
                            <th><i class="fas fa-calendar"></i> Fecha</th>
                            <th class="text-center"><i class="fas fa-cog"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <span class="order-number">#@order.OrderNumber</span>
                                </td>
                                <td>
                                    <span class="client-name">@order.UserName</span>
                                </td>
                                <td>
                                    <div class="product-preview">
                                        <span class="product-count">@order.TotalItems</span> producto(s)
                                        <br>
                                        <small>@string.Join(", ", order.Items.Take(2).Select(i => i.ProductName))</small>
                                        @if (order.Items.Count > 2) 
                                        { 
                                            <small class="text-muted">y @(order.Items.Count - 2) m√°s...</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="total-amount">@order.Total.ToString("C")</span>
                                </td>
                                <td>
                                    <div class="delivery-point">
                                        <i class="fas fa-map-pin"></i>
                                        <span>@order.DeliveryPoint</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                        @order.StatusDisplay
                                    </span>
                                </td>
                                <td>
                                    <div class="order-date">
                                        <div>@order.CreatedAt.ToString("dd/MM/yyyy")</div>
                                        <small>@order.CreatedAt.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Details", new { id = order.Id })" 
                                       class="btn-action">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h4>No hay pedidos para mostrar</h4>
                <p>Los pedidos aparecer√°n aqu√≠ cuando los clientes realicen compras</p>
            </div>
        }
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Confirmed" => "bg-info",
            "InProgress" => "bg-primary",
            "ReadyForPickup" => "bg-success",
            "Completed" => "bg-secondary",
            "Cancelled" => "bg-danger",
            _ => "bg-light text-dark"
        };
    }
}

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('‚úÖ Gesti√≥n de pedidos cargada');
        console.log('üì¶ Total de pedidos:', @Model.Count);
        
        // Efecto hover mejorado en las filas
        const rows = document.querySelectorAll('.table tbody tr');
        rows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.01)';
            });
            row.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    });
</script>
}